<div class="container">

<h1>
	Users with this talent:
</h1>

<table style="width:40%">

	<% @talent.profiles.each do |profile| %>
	<tr>
		<td>
		<h2>
			<strong><%= link_to profile.name, profile_path(profile) %></strong> 
		</h2>
		</td>
		<td>
		<h2>
		  	<strong>Average Rating:</strong> 
		  	<% if profile.average_rating == -1 %>
		  		Unrated
		  	<% else %>
				<%= link_to profile.average_rating, profile_path(profile) %>
			<% end %>
		</h2>
		</td>
	</tr>
	<% end %>
</table>

</div>



